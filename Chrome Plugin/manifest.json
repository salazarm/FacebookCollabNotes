{
  "manifest_version": 2,
  "name": "FBCollabNotes",
  "description": "Collaborative editing for Facebook Notes!",
  "version": "1.0",
  "background" : {
    "scripts" : [
      "lib/jquery.js",
      "lib/underscore.js",
      "background/main.js"
      ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "content_scripts": [{
    "matches": ["http://*.facebook.com/editnote.php*", "https://*.facebook.com/editnote.php*"],
    "css" : ["css/content_script.css"],
    "js": [
      "lib/jquery.js",
      "lib/underscore.js",  
      "content_scripts/main.js"
    ]
  }],
  "permissions": [
    "tabs",
    "storage",
    "http://*.facebook.com/*",
    "https://*.facebook.com/*"
  ]
}